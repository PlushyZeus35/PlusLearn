doctype html
html(lang="en")
    head
        include ./includes/head.pug
        include ./includes/bootstrap.pug
        include ./includes/fonts.pug
        link(rel="stylesheet", href="/static/css/test.css")
        script(src='https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.10.2/lottie.min.js' integrity='sha512-fTTVSuY9tLP+l/6c6vWz7uAQqd1rq3Q/GyKBN2jOZvJSLC5RjggSdboIFL1ox09/Ezx/AKwcv/xnDeYN9+iDDA==' crossorigin='anonymous' referrerpolicy='no-referrer')
    body.bg-secondary 
        include ./includes/app_nav.pug
        .bg-primary 
            .container.py-4 
                .row 
                    .col-12.col-md-8 
                        h2#quizTitle #{test.title}
                        a.link-info#quizOwner(href="#") #{user.username}
                    .col-12.col-md-4.bg-secondary.rounded.d-flex.flex-column.justify-content-center.align-items-center.p-4
                        h5 Detalles
                        #options1.d-flex.justify-content-around 
                            div
                                if test.active
                                    svg.bi.bi-check-circle-fill.me-2(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='#198754' viewbox='0 0 16 16')
                                        path(d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z')
                                else 
                                    svg.bi.bi-x-circle-fill.me-2(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='#dc3545' viewbox='0 0 16 16')
                                        path(d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z')
                                span Activo 
                            div
                                if test.interactive
                                    svg.bi.bi-check-circle-fill.me-2(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='#198754' viewbox='0 0 16 16')
                                        path(d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z')
                                else 
                                    svg.bi.bi-x-circle-fill.me-2(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='#dc3545' viewbox='0 0 16 16')
                                        path(d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z')
                                span Interactivo
                        #options2.d-flex.justify-content-around.mt-2 
                            div 
                                span 10 min.
                            div
                                span 15 preguntas
                        button.mt-3.btn.btn-primary Comenzar
        .bg-secondary
            .container.py-4
                h2 Descripcion 
                span #{test.description}
                
